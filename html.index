<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>HTML Chess</title>
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background: #333;
    }
    .board {
      display: grid;
      grid-template-columns: repeat(8, 80px);
      grid-template-rows: repeat(8, 80px);
      border: 5px solid #222;
    }
    .square {
      width: 80px;
      height: 80px;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 48px;
      cursor: grab;
    }
    .light { background: #eee; }
    .dark { background: #769656; color: white; }
  </style>
</head>
<body>
  <div class="board" id="board"></div>

  <script>
    const board = document.getElementById("board");

    // Chess starting position (using Unicode)
    const startPosition = [
      "♜","♞","♝","♛","♚","♝","♞","♜",
      "♟","♟","♟","♟","♟","♟","♟","♟",
      "","","","","","","","",
      "","","","","","","","",
      "","","","","","","","",
      "","","","","","","","",
      "♙","♙","♙","♙","♙","♙","♙","♙",
      "♖","♘","♗","♕","♔","♗","♘","♖"
    ];

    // Build board
    for (let i = 0; i < 64; i++) {
      const square = document.createElement("div");
      square.classList.add("square", (Math.floor(i/8) + i) % 2 === 0 ? "light" : "dark");
      square.textContent = startPosition[i];
      square.draggable = true;

      // Drag and drop functionality
      square.addEventListener("dragstart", e => {
        e.dataTransfer.setData("text", i);
      });
      square.addEventListener("dragover", e => e.preventDefault());
      square.addEventListener("drop", e => {
        e.preventDefault();
        let from = e.dataTransfer.getData("text");
        let piece = board.children[from].textContent;
        board.children[from].textContent = "";
        square.textContent = piece;
      });

      board.appendChild(square);
    }
  </script>
</body>
</html>